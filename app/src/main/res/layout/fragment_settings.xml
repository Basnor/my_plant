<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_delete_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whatever"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Удалить тип растения"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_delete_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/whatever"
            android:text="Удалить профиль растения"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>